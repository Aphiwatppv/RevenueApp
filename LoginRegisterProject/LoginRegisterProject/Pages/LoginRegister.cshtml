@page
@model LoginRegisterModel
@{
    ViewData["Title"] = "Login and Register";
}

<div class="container mt-5 container-custom">
    <div class="row g-5 align-items-center">
        <div class="col-md-5">
            <h1 class="display-4">Revenue System Management</h1>
            <h2>Welcome to Aphiwat Company...</h2>
            <p class="lead">
                "Attempting may not always lead to success, but never attempting ensures you won’t succeed." - <strong>Aphiwat D.</strong>, Test Development Engineer
            </p>
        </div>
        <div class="col-md-7">
            <div class="card shadow" style="background-color: #333; color: #ccc;">
                <div class="card-body">
                    <ul class="nav nav-pills nav-fill mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="pills-login-tab" data-bs-toggle="pill" href="#pills-login" role="tab" aria-controls="pills-login" aria-selected="true" style="background-color: #555; color: #fff;">Login</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="pills-register-tab" data-bs-toggle="pill" href="#pills-register" role="tab" aria-controls="pills-register" aria-selected="false" style="background-color: #444; color: #ccc;">Register</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="pills-login-tab">
                            <form method="post" asp-page-handler="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="mb-3">
                                    <label for="LoginInput_EN" class="form-label">Employee Number (EN)</label>
                                    <input type="text" class="form-control" id="LoginInput_EN" asp-for="LoginInput.EN" placeholder="Enter your EN" required style="background-color: #222; color: #eee;">
                                </div>
                                <div class="mb-3">
                                    <label for="LoginInput_Password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="LoginInput_Password" asp-for="LoginInput.Password" placeholder="Enter your password" required style="background-color: #222; color: #eee;">
                                </div>
                                <button type="submit" class="btn btn-primary w-100" style="background: linear-gradient(to right, #0048aa, #007bff); border: none;">Login</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="pills-register-tab">
                            <form method="post" asp-page-handler="Register">
                                <div class="mb-3">
                                    <label for="RegisterInput_EN" class="form-label">Employee Number (EN)</label>
                                    <input type="email" class="form-control" id="RegisterInput_EN" asp-for="RegisterInput.EN" placeholder="Enter your email" required style="background-color: #222; color: #eee;">
                                </div>
                                <div class="mb-3">
                                    <label for="RegisterInput_Password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="RegisterInput_Password" asp-for="RegisterInput.Password" placeholder="Create a password" required style="background-color: #222; color: #eee;">
                                </div>
                                <div class="mb-3">
                                    <label for="RegisterInput_ConfirmPassword" the form-label">Confirm Password</label>
                                    <input type="password" class="form-control" id="RegisterInput_ConfirmPassword" asp-for="RegisterInput.Password" placeholder="Confirm your password" required style="background-color: #222; color: #eee;">
                                </div>
                                <button type="submit" class="btn btn-success w-100" style="background: linear-gradient(to right, #0a662a, #28a745); border: none;">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
